<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Tweet ID</th>
      <th>Content</th>
      <th>Url</th>
      <th>Retweets</th>
      <th>Favorites</th>
      <th>Data set twuser</th>
      <th>Post date</th>
      <th>Tweeter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.tw_id %></td>
        <td><%= tweet.content %></td>
        <td><%= tweet.url %></td>
        <td><%= tweet.retweets %></td>
        <td><%= tweet.favorites %></td>
        <td><%= tweet.data_set_twuser_id %></td>
        <td><%= tweet.post_date %></td>
        <td><%= link_to tweet.tweeter.name, tweet.tweeter %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
