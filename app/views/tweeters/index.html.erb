<p id="notice"><%= notice %></p>

<h1>Tweeters</h1>

<table>
  <thead>
    <tr>
      <th>Twuser</th>
      <th>Screen name</th>
      <th>Name</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweeters.each do |tweeter| %>
      <tr>
        <td><%= tweeter.twuser_id %></td>
        <td><%= tweeter.screen_name %></td>
        <td><%= tweeter.name %></td>
        <td><%= tweeter.url %></td>
        <td><%= link_to 'Show', tweeter %></td>
        <td><%= link_to 'Edit', edit_tweeter_path(tweeter) %></td>
        <td><%= link_to 'Destroy', tweeter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

